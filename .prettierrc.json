{
  "semi": true,
  "trailingComma": "all",
  "singleAttributePerLine": true,
  "attributeGroups": ["$CODE_GUIDE"],
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": ["*.svg"],
      "options": {
        "parser": "xml",
        "xmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
